@{ 
    var db = Database.Open("SmartCity");
    string success = "",failure = "";
    if (IsPost)
    {
        string email = Request["email"];
        string password = Request["password"];
        string cpassword = Request["cpassword"];


        if (String.Equals(password, cpassword)){
            var sqlSearch = "SELECT * FROM users WHERE email LIKE '" + email + "'";
            var count = 0;
            foreach (var row in db.Query(sqlSearch))
            {
                count++;
            }
            if (count > 0)
            {
                failure = "You are already registered";
            } else
            {
                var sqlInsert = "INSERT INTO [users](email,[password]) VALUES(?,?)";
                db.Execute(sqlInsert, email, password);
                success = "success";
            }
        } else
        {
            failure = "Password does not match";
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SmartCity</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bitter:400,700">
    <link rel="stylesheet" href="assets/css/Footer-Basic.css">
    <link rel="stylesheet" href="assets/css/Header-Dark.css">
    <link rel="stylesheet" href="assets/css/Highlight-Clean.css">
    <link rel="stylesheet" href="assets/css/Navigation-Clean.css">
    <link rel="stylesheet" href="assets/css/styles.css">
    <style>
        .box {
            color: black;
        }
        .form-holder {
            height:350px;
            width:100%;
            position :relative;
        }
        .form {
            position: absolute;
            top : 50%;
            left : 50%;
            transform : translate(-50%,-50%);
            min-width:300px;
            width: 30%;
            padding: 15px;
            box-shadow: 0px 0px 10px #eeeeee;
            border : 1px solid #eeeeee;
            border-radius : 5px;
        }
    </style>
</head>

<body>
    @RenderPage("header.cshtml");
    <div class="container form-holder">
        <div class="form">
            <h3>Sign up</h3><hr />
            @{
                if (success != "")
                {
                    <p>Registration Success <a href="~/loginPage.cshtml">Login Here</a></p>
                }
                if (failure != "")
                {
                    <p style="color:red;text-align:center">@failure</p>
                }
            }

            <form method="post" action="~/SignUp.cshtml">
                <label>Email :</label>
                <input type="email" name="email" placeholder="Email" class="form-control" />
                <label>Password :</label>
                <input type="password" name="password" placeholder="Password" class="form-control" />
                <label>Confirm Password :</label>
                <input type="password" name="cpassword" placeholder="Confirm Password" class="form-control" /><br />
                <button type="submit" class="btn btn-primary" name="signup">Sign Up</button>
            </form>
        </div>
    </div>
    @RenderPage("footer.cshtml");
</body>

</html>