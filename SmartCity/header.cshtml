@{
    var db = Database.Open("SmartCity");
    var catQuery = "SELECT * FROM Category";
}
<div>
    <nav class="navbar navbar-default navigation-clean">
        <div class="container">
            <div class="navbar-header"><a class="navbar-brand" href="~/Default.cshtml">SmartCity&nbsp;</a><button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button></div>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav navbar-left">
                    <li role="presentation"><a href="~/Default.cshtml">Home</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Category<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @foreach (var row in db.Query(catQuery))
                            {
                                <li role="presentation"><a href="~/search-result.cshtml?category=@row.ID">@row.Category</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                @if (Session["user"] != null)
                {
                    <ul class="navbar-nav nav navbar-right">
                        <li><a href="~/logout.cshtml">Logout</a></li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav nav navbar-right">
                        <li><a href="~/SignUp.cshtml">Sign Up</a></li>
                        <li><a href="~/loginPage.cshtml">Login</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</div>